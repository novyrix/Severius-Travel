# Database (PostgreSQL for Production, SQLite for Local Dev)
# For local development:
DATABASE_URL="file:./prisma/dev.db"
DIRECT_URL="file:./prisma/dev.db"

# For production (Neon, Vercel Postgres, or any PostgreSQL):
# DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"
# DIRECT_URL="postgresql://user:password@host:5432/database?sslmode=require"

# Authentication (NextAuth.js)
# Generate secret with: openssl rand -base64 32
NEXTAUTH_URL="https://yourdomain.com"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Payment Gateway (PesaPal)
PESAPAL_CONSUMER_KEY="your_consumer_key"
PESAPAL_CONSUMER_SECRET="your_consumer_secret"
PESAPAL_IPN_ID="your_ipn_id"
PESAPAL_IPN_URL="https://yourdomain.com/api/payments/callback"
PESAPAL_ENVIRONMENT="sandbox" # Change to "production" for live

# Image Service (Unsplash - Optional)
UNSPLASH_ACCESS_KEY="your_access_key"
UNSPLASH_SECRET_KEY="your_secret_key"

# Email Service (Resend)
RESEND_API_KEY="your_resend_api_key"
EMAIL_FROM="noreply@yourdomain.com"
ADMIN_EMAIL="admin@yourdomain.com"

# Site Configuration
NEXT_PUBLIC_SITE_URL="https://yourdomain.com"
NEXT_PUBLIC_BASE_URL="https://yourdomain.com"
NEXT_PUBLIC_WHATSAPP_NUMBER="1234567890"
NEXT_PUBLIC_CONTACT_EMAIL="info@yourdomain.com"
NEXT_PUBLIC_CONTACT_PHONE="+1 234 567 8900"
NEXT_PUBLIC_CONTACT_PHONE_DISPLAY="+1 234 567 8900"

# Google Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# SEO (Optional)
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION="your_verification_code"
